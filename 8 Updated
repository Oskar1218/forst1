namespace Age_Verification_and_Control_Flow_Exercise_uppgift_8
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] numbers = new int[]
            {
                0, 1, 2, 3, 4, 5
            };

            Console.WriteLine("Enter your age: ");
            string ageInput = Console.ReadLine();
            int age = Convert.ToInt32(ageInput);

            Console.WriteLine();
            Console.WriteLine("Your name is " + "and your age is " + age);


            if (age >= 18)
            {
                Console.WriteLine("Counter is at the legal age");
            }
            
            {
                Console.WriteLine("Counter is under the legal age");

                int i = 0;

                while (i < 5)
                    
                    switch(i) {




                    case 1:
                        Console.WriteLine("Counter is One"); 
                        break;
                    case 2:
                        Console.WriteLine("Counter is Two");
                        break;
                    case 3:
                        Console.WriteLine("Counter is Three");
                        break;
                    case 4:
                        Console.WriteLine("Counter is Four");
                        break;
                    case 5:
                        Console.WriteLine("Counter is Five");
                        break;
                    case 6:
                        Console.WriteLine("Invalid");
                        break;

                    }
                    var name2 = "John"; 
                    Console.WriteLine(name2);

                Console.WriteLine("Hello " + name2);


                }
            }

        }
    }
