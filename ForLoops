            /*
            for (int i = 0; i < 6; i++)
            {
                Console.WriteLine(i);
            }

            for (int i = 1; i <= 10; i += 2)
            {
                Console.WriteLine(i);
            }
            */
            /*
            Console.WriteLine("How many times do you want to loop? ");
            int LoopCounter = Convert.ToInt32(Console.ReadLine());
            if (LoopCounter <= 0)
            {
                Console.WriteLine("Sorry, Please enter a value above 0");
